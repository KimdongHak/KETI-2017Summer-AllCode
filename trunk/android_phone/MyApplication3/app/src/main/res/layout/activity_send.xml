<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.c.myapplication.activity_send">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="민원 접수 화면"
                android:gravity="center"
                android:textSize="25sp"
                android:background="#FFFFFF"
                android:id="@+id/text"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#EEEEEE"
                android:id="@+id/line1"
                android:layout_below="@+id/text"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tn"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="차량번호"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginRight="1dp"/>
                <TextView
                    android:id="@+id/tnedit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#EEEEEE"
                android:id="@+id/line2"
                android:layout_below="@+id/line1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/temp"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="현재온도"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginRight="1dp"/>
                <TextView
                    android:id="@+id/tempedit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#EEEEEE"
                android:id="@+id/line3"
                android:layout_below="@+id/line2"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/hum"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="현재습도"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_marginRight="1dp"/>
                <TextView
                    android:id="@+id/humedit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:textSize="20sp"/>
            </LinearLayout>
            <TextView
                android:layout_below="@+id/line3"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="불만 사항"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#0054FF"
                android:id="@+id/text2"/>
            <RadioGroup
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:paddingLeft="20dp"
                android:id="@+id/radios">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="추워요"
                    android:id="@+id/radio1"
                    android:textSize="17sp"
                    android:paddingLeft="10dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="더워요"
                    android:id="@+id/radio2"
                    android:textSize="17sp"
                    android:paddingLeft="10dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="건조해요"
                    android:id="@+id/radio3"
                    android:textSize="17sp"
                    android:paddingLeft="10dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="습해요"
                    android:id="@+id/radio4"
                    android:textSize="17sp"
                    android:paddingLeft="10dp"/>
            </RadioGroup>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:id="@+id/minwon"
                android:layout_below="@+id/radios">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="민원 내용(150자이내)"
                    android:textSize="20sp"
                    android:id="@+id/text3"
                    android:paddingTop="10dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_below="@+id/text3"
                    android:id="@+id/edit" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:background="#FFFFFF"
                android:layout_below="@+id/minwon">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이전 화면"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentLeft="true"
                    android:onClick="backButtonClicked"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="민원 보내기"
                    android:textSize="15sp"
                    android:onClick="sendMinWon"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
